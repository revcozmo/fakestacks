
<div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6 signin-headline">
  <H1>PUT YOUR FAKE MONEY WHERE YOUR MOUTH IS.</H1>
</div>
<div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4 col-lg-offset-4 col-lg-4">
  <form action="/session/create" method="POST" class="fs-form form-signin">
        <% if (flash && flash.err) { %>
          <ul class="alert alert-danger">
          <% Object.keys(flash.err).forEach(function(error) { %>
          <li><%- flash.err[error].message %></li>
          <% }) %>
          </ul>
        <% } %>

        <input type="text" class="form-control" placeholder="Email" name="email">
        <input type="password" class="form-control" placeholder="Password" name="password">
        <input type="submit" class="btn btn-lg btn-primary btn-block" value="SIGN IN"/>
        <input type="hidden" name="_csrf" value="<%= _csrf %>" />
        <div class="register-invite">New to Fake Stacks? <a href="/register">Sign up.</a></div>
  </form>
</div>
<div class="signin-page">
</div>
<div class="signin-page-overlay"></div>
