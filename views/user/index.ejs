<div class="container">
	<h3>League</h3>
	<div class="row col-lg-8 col-md-10 col-sm-12">
	<table class='table table-striped table-condensed standings'>
		<thead>
			<tr>
				<th width=20>Rank</th>
				<th>Name</th>
				<th>Money</th>
				<th>Pending</th>
				<th>Record</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
	<tbody>
		<% _.each(gamblers, function(gambler, index) { %>
		<tr data-id="<%= gambler.id %>" data-model="gambler">
			<td><%= index+1 %></td>
			<td><%= gambler.user.firstName %> <%= gambler.user.lastName %></td>
			<td>
				<a href="transaction/show/<%= gambler.id %>">
				$<%= gambler.money %>
				</a>
			</td>
			<td>$<%= gambler.pending %></td>
			<td><%= gambler.record %></td>
      <td></td>
      <td></td>
		</tr>

		<% }) %>
	</tbody>
	</table>
	<div>Average Money: $<%= (totalMoney / gamblers.length).toFixed(0) %></div>
	<div>Total Record: <%= totalRecord %></div>
	<br>
	<div>House Earnings: <%= houseMoney %></div>
	<div>Total Vig (if the house took vig): <%= totalVigLoss %></div>
	<div>House Earnings w/ Vig: <%= houseMoneyWithVig %></div>
</div>
</div>
