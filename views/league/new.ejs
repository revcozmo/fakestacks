<div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6 signin-headline">
  <h1>PUT YOUR FAKE MONEY WHERE YOUR MOUTH IS.</h1>
</div>
<div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4 col-lg-offset-4 col-lg-4">
  <form action="/league/create" method="POST" id="sign-up-form" class="fs-form form-horizontal">
	<% if (flash && flash.err) { %>
		<ul class="alert alert-danger">
	<% Object.keys(flash.err).forEach(function(error) { %>
		<li><%- JSON.stringify(flash.err[error]) %></li>
	<% }) %>
		</ul>
	<% } %>
  <div class="form-group">
    <label for="leagueName" class="col-sm-6 control-label">League Name</label>
    <div class="col-sm-6">
      <input type="text" name="name" class="form-control" id="leagueName" placeholder="League Name">
    </div>
  </div>
  <div class="form-group">
    <label for="leagueSport" class="col-sm-6 control-label">Sport</label>
    <div class="col-sm-6">
      <select id="leagueSport" name="sport" class="form-control custom-select">
        <% Object.keys(sails.config.sports).forEach(function(sportKey) { %>
        <option value="<%= sportKey %>"><%= sails.config.sports[sportKey].name %></option>
        <% }) %>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label for="startingAccount" class="col-sm-6 control-label">Starting Account Balance</label>
    <div class="col-sm-6">
      <select id="startingAccount" name="startingAccount" class="form-control custom-select">
        <option value="100">$100</option>
        <option value="250">$250</option>
        <option value="500">$500</option>
        <option value="1000">$1000</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label for="weeklyBetCountMax" class="col-sm-6 control-label">Weekly Maximum Bets</label>
    <div class="col-sm-6">
      <select id="weeklyBetCountMax" name="weeklyBetCountMax" placeholder="Weekly Maximum Bets" class="form-control custom-select">
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="10">10</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label for="weeklyBetAccountRatio" class="col-sm-6 control-label">Weekly Bet Account Ratio</label>
    <div class="col-sm-6">
      <select id="weeklyBetAccountRatio" name="weeklyBetAccountRatio" placeholder="Weekly Bet Ratio (%)" class="form-control custom-select">
        <option value="25">25%</option>
        <option value="50">50%</option>
        <option value="75">75%</option>
        <option value="100">100%</option>
      </select>
    </div>
  </div>
 
	<input type="submit" class="btn btn-lg btn-primary btn-block" value="CREATE LEAGUE"/>
	<input type="hidden" name="_csrf" value="<%= _csrf %>" />
	<input type="hidden" name="admin" value="<%= currentuser.id %>" />
</form>
</div>
<div class="signin-page">
</div>
<div class="signin-page-overlay"></div>
